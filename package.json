{
  "name": "@moohng/dan",
  "version": "1.6.0",
  "description": "js工具库",
  "main": "dist/dan.umd.js",
  "module": "lib/index.js",
  "browser": "dist/dan.min.js",
  "type": "module",
  "scripts": {
    "serve": "live-server --no-browser --watch=demo,dist",
    "type-check": "tsc --noEmit",
    "build": "yarn build:types && yarn build:lib && yarn build:dist",
    "build:types": "tsc --emitDeclarationOnly",
    "build:lib": "babel src -d lib -x \".ts,.tsx\"",
    "build:dist": "rollup -c rollup.config.js",
    "lint": "eslint --ext .ts,.js src --fix",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "keywords": [
    "util",
    "utils",
    "validate",
    "format",
    "query",
    "date"
  ],
  "files": [
    "lib",
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:moohng/dan.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Kevin",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.12.1",
    "@babel/plugin-proposal-optional-chaining": "^7.12.7",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "babel-jest": "^26.6.3",
    "del": "^5.1.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "jest": "^26.6.3",
    "lint-staged": "^10.1.7",
    "live-server": "^1.2.1",
    "rollup": "^2.38.0",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-terser": "^5.3.0",
    "typescript": "^4.1.3"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-proposal-nullish-coalescing-operator",
      "@babel/plugin-proposal-optional-chaining",
      "@babel/plugin-proposal-class-properties"
    ],
    "env": {
      "test": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": "current"
              }
            }
          ],
          "@babel/preset-typescript"
        ]
      }
    }
  },
  "browserslist": [
    "last 1 version",
    "> 1%",
    "not dead"
  ]
}
