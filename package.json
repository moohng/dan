{
  "name": "@moohng/dan",
  "version": "1.5.2",
  "description": "js工具库",
  "main": "lib/dan.js",
  "module": "src/index.js",
  "browser": "dist/dan.min.js",
  "scripts": {
    "serve": "live-server --no-browser --watch=demo,dist",
    "type-check": "tsc --noEmit",
    "build": "yarn build:types && yarn build:lib",
    "build:types": "tsc --emitDeclarationOnly",
    "build:lib": "babel src -d lib -x \".ts,.tsx\"",
    "build:dist": "node build/build.js dist",
    "lint": "eslint --ext .ts,.js src --fix",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "keywords": [
    "util",
    "utils",
    "validate",
    "format",
    "query",
    "date"
  ],
  "files": [
    "lib",
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:moohng/dan.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Kevin",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.12.1",
    "@babel/plugin-proposal-optional-chaining": "^7.12.7",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "babel-jest": "^25.4.0",
    "del": "^5.1.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "jest": "^24.8.0",
    "lint-staged": "^10.1.7",
    "live-server": "^1.2.1",
    "rollup": "^2.7.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.3.0",
    "typescript": "^4.1.3"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-proposal-nullish-coalescing-operator",
      "@babel/plugin-proposal-optional-chaining",
      "@babel/plugin-proposal-class-properties",
      [
        "@babel/plugin-transform-runtime",
        {
          "corejs": 3,
          "useESModules": true
        }
      ]
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "dependencies": {
    "@babel/runtime-corejs3": "^7.12.5"
  }
}
