{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "lib",
    "emitDeclarationOnly": true,
    "strict": true,
    // "checkJs": true,
    // "allowJs": true,
    "locale": "zh-CN",
    "newLine": "lf",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
}
